<!-- including partials-->
<%- include ("../partials/header") %>

<div class = "container">
	<header class = "jumbotron">
	<h1>
	Welcome to YelpCamp!!
	</h1>
		<div class = "container">
			<p>
			View our Hand-picked campgrounds all over the world
			</p>
			<p>
				<a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add New Campgrounds</a>
			</p>
		</div>
	</header>
	
	
	<div class = "row text-center" style = "display: flex; flex-wrap: wrap">
		<% campgrounds.forEach(function(campground){ %>
		<div class = "col-md-3 col-sm-6">
			<div class = "thumbnail">
				<!-- image has to be inserted by the variable array object-->
				<img src = "<%= campground.image %>">
				<div class = "caption">
					<h4><%= campground.name %></h4>
				</div>
				<!--  ._id is generated id by mongo db-->
				<a href = "/campgrounds/<%= campground._id %>" class = "btn btn-primary">More info</a>
			</div>
			
			
		</div>
	
		<% }) %>
		
	</div>
	

</div>

<%- include("../partials/footer") %>
